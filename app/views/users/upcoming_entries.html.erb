<div class="row">
	<div class="col-lg-10 col-lg-offset-1">
		<table class="table table-striped table-condensed">
			<thead>
				<tr>
					<th>Team  Name</th>
					<th>Team Salary</th>
					<th>League Name</th>
					<th>League Start</th>
					<th>League Size</th>
					<th># teams</th>
					<th>Links</th>
					<th>Edit</th>
					<th>Availability</th>
				</tr>
			</thead>
			<tbody>
				<% @fantasy_teams.each do |f| %>
				<tr>
					<td><%= f.name %></td>
					<td><%= format_salary(f.team_salary)%></td>
					<td><%= f.league.name %></td>
					<td><%= f.league.start_date.strftime('%b %d, %Y') %></td>
					<td><%= f.league.size %></td>
					<td><%= f.league.fantasy_teams_count %></td>
					<td><%= link_to "show", fantasy_team_path(f), :class => 'btn btn-mini btn-success'%></td>
					<td><%= link_to "edit", edit_fantasy_team_path(f, :league_id => f.league_id), :class => 'btn btn-mini btn-warning'%></td>
					<td><%= f.league.available? %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	
	
</div>