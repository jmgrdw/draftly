

<table class="table table-condensed table-striped">
	<thead>
		<tr>
			<th>Date</th>
			<th>Value</th>
			<th>Team/Payment</th>
		</tr>
	</thead>
	<tbody>
		<% @transaction_history.each do |transaction| %>
			<tr>
				<td><%= transaction.created_at.strftime('%b %d, %Y') %></td>
				<td>$ <%= transaction.value %></td>
				<% if transaction.fantasy_team_id %>
					<td><%= link_to "Your team", fantasy_team_path(transaction.fantasy_team) %></td>
				<% else %>
					<td>Added $</td>
				<% end %>
			</tr>
		<% end %>		
	</tbody>
</table>

